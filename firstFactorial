//Using the JavaScript language, have the function firstFactorial take the num parameter being passed and return the factorial of it.

function firstFactorial ( num ) {
	if ( num == 1 ) {
		return 1;
	} else if ( num === 0 ) { 	//strict === to test against 0
		return 0;
	} else {
		return num * firstFactorial ( num - 1 ) 	//recursive function
	}
	
};
